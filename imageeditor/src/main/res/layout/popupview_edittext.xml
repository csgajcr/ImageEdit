<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fl_input"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/anchor_left"
            android:background="@drawable/edit_text_bg">
            <EditText
                android:id="@+id/et_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:minWidth="60dp"
                android:background="@null"
                android:textCursorDrawable="@drawable/edit_text_cursor"></EditText>
        </FrameLayout>

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:id="@+id/anchor_left"
            android:layout_marginRight="-4dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/anchor_point"
            android:layout_centerVertical="true" />
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:id="@+id/anchor_right"
            android:layout_marginLeft="-4dp"
            android:background="@drawable/anchor_point"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/fl_input" />


    </RelativeLayout>


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#33ff0000"
        android:id="@+id/mask_view"/>
</RelativeLayout>
