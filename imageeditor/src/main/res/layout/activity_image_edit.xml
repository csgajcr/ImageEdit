<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
        <com.jcrspace.imageeditor.view.ImageEditView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_1"
            android:layout_weight="1"
            android:id="@+id/img_view"/>
    </LinearLayout>

    <com.jcrspace.imageeditor.view.BottomControlPanelView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_control_view"
        android:layout_gravity="bottom"></com.jcrspace.imageeditor.view.BottomControlPanelView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/spec_black"
        android:id="@+id/rl_title_bar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:padding="12dp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:padding="12dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <com.jcrspace.imageeditor.view.EditTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ev_text"></com.jcrspace.imageeditor.view.EditTextView>
</FrameLayout>
