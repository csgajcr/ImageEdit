<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jcrspace.mojidemo.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.jcrspace.imageeditor.view.ImageEditView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_1"
        android:layout_weight="1"
        android:id="@+id/img_view"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加直线"
            android:layout_alignParentLeft="true"
            android:id="@+id/btn_add_line" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加矩形"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_add_line"
            android:id="@+id/btn_add_rect" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加文字"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_add_rect"
            android:id="@+id/btn_add_text" />
    </RelativeLayout>

</LinearLayout>
